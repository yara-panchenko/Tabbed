<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabbed.Juuni"
             Title="Juuni">
    <ContentPage.Content>
        <StackLayout>
            <Button Text = "Eesti lipu päev" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked" />
            <Button Text = "Leinapäev" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked_1" />
            <Button Text = "Võidupühale eelnev päev" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked_2" />
            <Button Text = "Võidupüha" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked_3" />
            <Button Text = "Jaanipäev" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked_4" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>