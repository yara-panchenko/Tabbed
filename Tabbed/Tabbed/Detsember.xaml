<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabbed.Detsember"
             Title="Detsember">
    <ContentPage.Content>
        <StackLayout>
            <Button Text = "Jõululaupäevale eelnev päev" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked" />
            <Button Text = "Jõululaupäev" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked_1" />
            <Button Text = "Esimene jõulupüha" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked_2" />
            <Button Text = "Teine jõulupüha" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked_3" />
            <Button Text = "Uuele aastale eelnev päev" FontSize="Large" BorderWidth="1"
        HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
        Clicked="Button_Clicked_4" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>